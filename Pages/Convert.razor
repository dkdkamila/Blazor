@page "/convert"

<h3>Konvertering</h3>

<!-- Meter to Feet Conversion -->
<div>
    <label for="meters">Ange antal meter:</label>
    <input type="number" id="meters" @bind="meterInput" />
    <button class="btn btn-primary" @onclick="ConvertMeterToFeet">Konvertera meter till fot</button>
    @if (meterResult.HasValue)
    {
        <p>Resultat: @meterResult.Value fot</p>
    }
</div>

<!-- Km/h to Miles per Hour Conversion -->
<div>
    <label for="kmh">Ange antal km/h:</label>
    <input type="number" id="kmh" @bind="kmhInput" />
    <button class="btn btn-primary" @onclick="ConvertKmToMiles">Konvertera km/h till miles per hour</button>
    @if (milesResult.HasValue)
    {
        <p>Resultat: @milesResult.Value miles per hour</p>
    }
</div>

@code {
    private double? meterResult;
    private double? milesResult;
    private double meterInput;
    private double kmhInput;

    private void ConvertMeterToFeet()
    {
        // Konverteringslogik för meter till fot
        meterResult = meterInput * 3.28084;
        milesResult = null; // Nollställ resultatet för den andra konverteringen
    }

    private void ConvertKmToMiles()
    {
        // Konverteringslogik för km/h till miles per hour
        milesResult = kmhInput * 0.621371;
        meterResult = null; // Nollställ resultatet för den andra konverteringen
    }
}